<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashDstheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/splashAdStatusbar</item>
        <item name="colorPrimaryDark">@color/splashAdStatusbar</item>
    </style>
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="information_element" parent="AppTheme">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:gravity">right</item>
        <item name="android:textColorHint">@color/textview_lable</item>
    </style>

    <style name="cardviewstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/Widget.MaterialComponents.CardView</item>
        <item name="android:elevation">8dp</item>
    </style>



    <style name="AdsRecyclerItemSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_anchorGravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AdsRecyclerPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layoutDirection">inherit</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AdsRecyclerGridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:theme">@style/Widget.MaterialComponents.CardView</item>
    </style>

    //////////// custom alert dialog logout /////////////////////////
    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:layoutDirection">rtl</item>
    </style>


</resources>