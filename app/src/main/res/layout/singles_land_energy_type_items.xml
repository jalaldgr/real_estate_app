<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">


            <TextView
                android:id="@+id/SinglesEnergyTypeTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/vocabulary_title"
                android:textColor="@color/textview_lable"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/SinglesEnergyStateTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/vocabulary_title"
                android:textColor="@color/primary_black_text_color"
                android:textSize="16sp" />

        </LinearLayout>

</LinearLayout>