<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.CategoryFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/CategoryFragmentNewsIBtn"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_shape"
                    android:scaleType="fitXY"
                    android:src="@drawable/news" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/news_category" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentParticipationIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/participation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/new_land_participation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentRentIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/rent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/rent_category" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentPreSaleIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/presale" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/presale_category" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentSaleIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/sale" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/category_sale" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentServicesIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/services" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/services_category" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentOfficeIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/office" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/vocabulary_submit_office" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentLawyersIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/lawyers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/new_land_lawyer" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentCompanyIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/company" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/category_company" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/CategoryFragmentAgentIBtn"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:scaleType="fitXY"
                android:src="@drawable/agents" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/agent_category" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

